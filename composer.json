{
  "name": "pivvenit/acf-pro-installer",
  "description": "An install helper for Advanced Custom Fields PRO",
  "type": "composer-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Sander Klock",
      "homepage": "https://pivvenit.nl"
    }
  ],
  "replace": {
    "philippbaschke/acf-pro-installer" : "1.0.2"
  },
  "keywords": [
    "wordpress", "composer", "wp", "plugin", "acf", "env", "pro"
  ],
  "require": {
    "php": "^7.2",
    "composer-plugin-api": "^1.1",
    "vlucas/phpdotenv": "^3.0",
    "league/uri-manipulations": "^1.5",
    "league/uri-schemes": "^1.2",
    "ext-json": "*"
  },
  "require-dev": {
    "composer/composer": "^1.0",
    "phpunit/phpunit": "^8.0",
    "squizlabs/php_codesniffer": "^3.4"
  },
  "autoload": {
    "psr-4": { "PhilippBaschke\\ACFProInstaller\\": "src/ACFProInstaller" }
  },
  "extra": {
    "class": "PhilippBaschke\\ACFProInstaller\\ACFProInstallerPlugin"
  },
  "scripts": {
    "lint": "phpcs src tests --standard=PSR2",
    "test": "phpunit",
    "coverage": "phpunit --coverage-html coverage"
  }
}
